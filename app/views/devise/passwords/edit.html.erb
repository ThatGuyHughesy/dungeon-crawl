<div class="columns">
  <div class="column is-half is-fullheight has-background-dark has-content-vcentered has-content-hcentered">
    <%= image_tag("logo.png", :width => "300px") %>
  </div>
  <div class="column is-half is-fullheight has-background-white has-content-vcentered">
    <div class="container">
      <div class="form">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.password_field :password, autocomplete: "current-password", class: "input", required: "true" %>
            </div>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, class: "label" %>
            <div class="control">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", required: "true" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit "Change My Password", class: "button is-link is-fullwidth" %>
            </div>
          </div>
          <div class="field has-text-centered">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= devise_error_messages! %>
