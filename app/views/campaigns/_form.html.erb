<div class="form">
  <%= form_with(model: campaign, disabled: disabled) do |f| %>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <div class="control">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input", required: "true", disabled: disabled %>
      </div>
    </div>
    <div class="field">
      <%= f.label :description, class: "label" %>
      <div class="control">
        <%= f.text_area :description, autocomplete: "description", class: "textarea", disabled: disabled %>
      </div>
    </div>
    <% unless disabled %>
      <div class="field">
        <div class="control">
          <%= f.button class: "button is-link is-fullwidth" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
